<Window x:Class="HomeworkFileSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeworkFileSearch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    
    <Grid>
        <StackPanel Margin="10, 0, 0, 0">
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,0"  Text="Path To File:"/>
            <TextBox x:Name="FilePathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250"/>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,0" Text="Word To Search:"/>
            <TextBox x:Name="WordToSearchTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250"/>
            <Button  x:Name="StartSearchButton" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0" Width="100" Click="StartSearch_Click"/>
            <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        </StackPanel>
    </Grid>
    
</Window>
